{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }

    table {
        width: 100%
    }

    table td {
        text-align: center
    }
</style>

<div class="example-wrapper">
    <h1>Hello!</h1>
    <ul>
        <li>Your balance <code>{{ balance }}</code></li>
    </ul>
    <table>
        <tr>
            <td>Date</td>
            <td>Amount</td>
            <td>Balance</td>
        </tr>
        {% for operation in history %}
            <tr>
                <td>{{ operation.date }}</td>
                <td>{{ operation.value }}</td>
                <td>{{ operation.balance }}</td>
            </tr>
        {% endfor %}
    </table>
    {% endblock %}
